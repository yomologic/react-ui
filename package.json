{
  "name": "@yomologic/react-ui",
  "version": "0.2.7",
  "private": true,
  "workspaces": [
    "site"
  ],
  "description": "A modern, lightweight React UI component library built with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/yomologic/react-ui.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./base.css": "./dist/base.css",
    "./themes/*.css": "./dist/themes/*.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "yarn build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "tsc --noEmit --skipLibCheck"
    ]
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "yomologic"
  ],
  "author": "Yomologic",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.19.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "esbuild-plugin-postcss2": "^0.1.2",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4",
    "tsup": "^8.3.5",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "react-syntax-highlighter": "^16.1.0"
  }
}
